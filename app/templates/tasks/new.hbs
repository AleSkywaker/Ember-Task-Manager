<form>
	<div class="form-group">
		<label>Titulo</label>
		{{input type="text" class="form-control" value=title placeholder="Añade una tarea..."}}
	</div>
	<div class="form-group">
		<label>Fecha límite</label>
		{{input type="date" class="form-control" value=date}}
	</div>
	<div class="form-group">
		<label>Descripcion</label>
		{{textarea class="form-control" value=description placeholder="Describe su tarea..."}}
	</div>
	<button {{action 'addTask'}} class="btn btn-primary">Enviar</button>
</form>

